<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#393737"
		android:minWidth="25px"
		android:minHeight="25px">
		<Switch
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/switch_debt" />
		<TextView
			android:text="@string/their_debt"
			android:textAllCaps="true"
			android:textSize="16dp"
			android:textColor="@android:color/white"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/switch_debt"
			android:id="@+id/text_TheirDebt" />
	</RelativeLayout>
	<TextView
		android:text="@string/choose_contact"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:id="@+id/text_info_contact" />
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px">
	<Spinner
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minHeight="48dp"
		android:minWidth="280dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:id="@+id/spinner1" />
		<ImageButton
			android:src="@drawable/round_person_add_24"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_margin="20dp"
			android:background="@null"
			android:layout_toRightOf="@id/spinner1"
			android:id="@+id/imageButton1" />
	
		</RelativeLayout>
	<EditText
		android:inputType="numberDecimal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:gravity="left"
		android:textSize="70sp"
		android:id="@+id/editText_debt" />
	<android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_addDebt"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/currency_eur"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/add_debt_to_db"
		android:drawableTint="#fff"
		android:stateListAnimator="@null"
		android:textColor="#fff"
		android:onClick="addDebtToDatabase"
        android:backgroundTint="#404040" />
	
</LinearLayout>
